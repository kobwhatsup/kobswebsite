---
const projects = [
    {
        title: "金融数据分析平台",
        description: "结合机器学习的市场数据分析工具",
        tech: ["Python", "TensorFlow", "React"],
        icon: "📊"
    },
    {
        title: "区块链资产追踪",
        description: "实时监控和分析区块链交易",
        tech: ["Ethereum", "Node.js", "Web3.js"],
        icon: "⛓️"
    },
    {
        title: "智能投资助手",
        description: "基于AI的个人投资建议系统",
        tech: ["Python", "FastAPI", "Vue.js"],
        icon: "🤖"
    }
];
---
<section id="projects" class="projects">
    <h2>项目展示</h2>
    <div class="project-grid">
        {projects.map(project => (
            <div class="project-card">
                <div class="project-icon">{project.icon}</div>
                <h3>{project.title}</h3>
                <p>{project.description}</p>
                <div class="tech-stack">
                    {project.tech.map(tech => (
                        <span class="tech-tag">{tech}</span>
                    ))}
                </div>
            </div>
        ))}
    </div>
</section>

<style>
    .projects {
        padding: 4rem 0;
    }

    h2 {
        text-align: center;
        font-size: 2rem;
        color: var(--primary);
        margin-bottom: 3rem;
    }

    .project-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        padding: 0 2rem;
    }

    .project-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 1rem;
        padding: 2rem;
        transition: transform 0.3s ease;
    }

    .project-card:hover {
        transform: translateY(-5px);
    }

    .project-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    h3 {
        color: var(--secondary);
        margin: 0.5rem 0;
    }

    .tech-stack {
        margin-top: 1rem;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .tech-tag {
        background: rgba(78, 205, 196, 0.1);
        color: var(--primary);
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.875rem;
    }
</style>