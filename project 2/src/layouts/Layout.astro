---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="KOB - 科技探索者，金融实践者" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/rocket.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--primary: #4ECDC4;
		--secondary: #FF6B6B;
		--bg: #13151a;
		--text: #E2E8F0;
	}
	html {
		font-family: system-ui, sans-serif;
		background: var(--bg);
		color: var(--text);
	}
	body {
		margin: 0;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}
	* {
		box-sizing: border-box;
	}
</style>